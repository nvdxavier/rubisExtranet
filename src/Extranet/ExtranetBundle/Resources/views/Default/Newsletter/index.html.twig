{% extends '::layout/layoutAdmin.html.twig' %}

{% block body -%}
    <h1>Newsletter list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom Newsletter</th>
                <th>Description Newsletter</th>
                <th>Datedebut Newsletter</th>
                <th>Date Newsletter</th>

                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('newsletter_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.sujet }}</td>
                <td>{{ entity.dateMiseAJour|date('d-m-Y H:i:s') }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('newsletter_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('newsletter_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('newsletter_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
